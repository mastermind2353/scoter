<%= form_tag search_listings_path, remote: true do  %>
	<div class="car-list content-area">
	  <div class="container">
	    <div class="row">
	      <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
        	<% @listings.try(:each) do |listing| %>
        		<%= render 'index_listing', listing: listing %>
        	<% end %>
	      </div>
				<div class="col-lg-4 col-md-3 col-xs-12">
          <aside class="sidebar">
            <br>
            <div class="row">
              <div class="col-md-12">
              	<%= submit_tag 'Apply Filters', class: "btn btn-block btn-lg btn-danger" %>
              </div>
            </div>
            <div class="search-block">
            	<div class="row">
                  <br>
                  <div class="col-md-12">
                        <h2 class="title">Search Keyword</h2><br>
                	</div>
                	<div class="col-md-12">
                  	<%= text_field_tag :title, '' ,class: 'form-control', placeholder: "Make, Model" %>
                	</div>
            	</div>

                <hr>
                <div class="row">
                  <div class="col-md-12">
                        <h2 class="title">City</h2><br>
                	</div>
                	<div class="col-md-12">
                  	<%= select_tag :city, options_for_select(@cities) ,{ prompt: "Select City" ,class: 'form-control', placeholder: "Make, Model"} %>
                	</div>
            	</div>

                <hr>
                <div class="row">
                    <div class="price-box">
                    	<div class="col-md-12">
                          <h2 class="title">Price Range</h2><br>
                    	</div>
                        <div class="col-lg-6">
                            <input class="form-control" placeholder="Min price" name="minPrice">
                        </div>
                        <div class="col-lg-6">
                            <input class="form-control" placeholder="Max price" name="maxPrice">
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="price-box">
                    	<div class="col-md-12">
                          <h2 class="title">Year Range</h2><br>
                    	</div>
                        <div class="col-lg-6">
                            <input class="form-control" placeholder="Min" name="minYear">
                        </div>
                        <div class="col-lg-6">
                            <input class="form-control" placeholder="Min" name="maxYear">
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="price-box">
                    	<div class="col-md-12">
                            <h2 class="title">Engine Power (cc)</h2><br>
                    	</div>
                        <div class="col-lg-6">
                            <input class="form-control" placeholder="Min" name="minEngine">
                        </div>
                        <div class="col-lg-6">
                            <input class="form-control" placeholder="Max" name="maxEngine">
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="search-block">
              <h2 class="title">Brands</h2>
              <% @makers.try(:each) do |maker| %>
              	<div class="checkbox checkbox-theme checkbox-circle">
                  <input id="checbox8" type="checkbox">
                  <label for="checkbox8">
                      <%= maker.name %>
                  </label>
            	  </div>
              <% end %>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
              	<%= submit_tag 'Apply Filters', class: "btn btn-block btn-lg btn-danger" %>
              </div>
            </div>
        	</aside>
      	</div>
	    </div>
	  </div>
	</div>
<% end %>
